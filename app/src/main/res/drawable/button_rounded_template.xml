<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#4197ec" />
            <gradient android:angle="-90" android:startColor="#5fa6ec" android:endColor="#0b5dae"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#4197ec" />
            <solid android:color="#4197ec"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#4197ec" />
            <solid android:color="#8fc5fa"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#4197ec" />
            <solid android:color="#4197ec"/>
        </shape>
    </item>


    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#4197ec" />
            <gradient android:angle="-90" android:startColor="#5fa6ec" android:endColor="#4197ec" />
        </shape>
    </item>
</selector>